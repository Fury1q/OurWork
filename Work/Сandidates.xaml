            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Column="1" Grid.Row="1" Grid.RowSpan="12" Grid.ColumnSpan="14"/>
        <TextBlock Name="textBlock1" Text="Дисциплина" Grid.Column="16" Grid.Row="1" Grid.ColumnSpan="4" VerticalAlignment="Bottom" FontSize="15"></TextBlock>
        <TextBlock Name="textBlock2" Text="Должность    " Grid.Column="16" Grid.Row="4" Grid.ColumnSpan="4" VerticalAlignment="Bottom" FontSize="15"></TextBlock>
        <TextBox Name="textBoxDiscip" Grid.Column="16" Grid.Row="2" Grid.ColumnSpan="4"></TextBox>
        <TextBox Name="textBoxPost" Grid.Column="16" Grid.Row="5" Grid.ColumnSpan="4"></TextBox>
        <Button Name="buttonAdd" Content="Добавить" Grid.Column="16" Grid.Row="10" Grid.ColumnSpan="4" Click="buttonAdd_Click"></Button>
        <Button Name="buttonDel" Content="Удалить" Grid.Column="16" Grid.Row="12" Grid.ColumnSpan="4"></Button>
        <Button Name="buttonEdit" Content="Редактировать" Grid.Column="16" Grid.Row="8" Grid.ColumnSpan="4" Click="buttonEdit_Click"></Button>
    </Grid>
</Window>
